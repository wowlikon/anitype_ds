{
  "name": "Anitype DS",
  "description": "Показывает anitype в discord rich presence. Если вы смотрите аниме вместе, то в вашем профиле будет отображаться ссылка на совместный просмотр и количество участников",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://anitype.fun/*"],
      "js": ["api.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webRequest"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' http://localhost:878"
  },
  "background": {},
  "host_permissions": ["https://anitype.fun/*"]
}